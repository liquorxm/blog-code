{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "removeComments": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES2015"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src/*.ts", "./src/**/*.ts"],
  // "exclude": [
  //   "node_modules",
  //   "dist",
  //   "**/*.test.ts",
  //   "public",
  //   "./src/*.js",
  //   "./src/**/*.js"
  // ]
}
